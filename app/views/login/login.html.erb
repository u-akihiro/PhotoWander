<div id="loginForm">
<%= form_tag("/login") do %>
    <div class="errors">
        <% if !@error.nil? %>
            <p class="error"><%= @error %></p>
        <% end %>
    </div>
    <div class="field">
        <%= label_tag 'mail' %>
        <%= text_field_tag 'mail' %>
    </div>
    <div class="field">
        <%= label_tag 'password' %>
        <%= password_field_tag 'password' %>
    </div>
    <div class="actions">
        <%= submit_tag 'ログイン' %>
    </div>
<% end %>    
</div>